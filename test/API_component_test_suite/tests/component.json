[
    {
        "description": "component",
        "schema": {
            "type": "component",
            "properties": {
                "type": {
                    "enum": [
                        "machin"
                    ]
                },
                "onPressed": {
                    "type": "listener",
                    "properties": {
                        "action": {
                            "type": "string"
                        },
                        "props": {
                            "type": "object"
                        }
                    },
                    "required": [
                        "action"
                    ]
                }
            },
            "required": [
                "onPressed"
            ],
            "additionalProperties": false
        },
        "tests": [
            {
                "description": "valid",
                "data": {
                    "type": "machin",
                    "onPressed": {
                        "action": "myAction",
                        "props": {
                            "my": "data"
                        }
                    }
                },
                "valid": true
            },
            {
                "description": "valid, additional properties on listener allowed",
                "data": {
                    "type": "machin",
                    "onPressed": {
                        "action": "myAction",
                        "props": {
                            "my": "data"
                        },
                        "foo": "bar"
                    }
                },
                "valid": true
            },
            {
                "description": "invalid, additional properties on component not allowed",
                "data": {
                    "type": "machin",
                    "onPressed": {
                        "action": "myAction",
                        "props": {
                            "my": "data"
                        }
                    },
                    "foo": "bar"
                },
                "valid": false
            },
            {
                "description": "invalid, bad component name",
                "data": {
                    "type": "foo",
                    "onPressed": {
                        "action": "myAction",
                        "props": {
                            "my": "data"
                        }
                    }
                },
                "valid": false
            },
            {
                "description": "invalid, action is required in listener",
                "data": {
                    "type": "machin",
                    "onPressed": {
                        "props": {
                            "my": "data"
                        }
                    }
                },
                "valid": false
            },
            {
                "description": "invalid, onPressed must be defined",
                "data": {
                    "type": "machin"
                },
                "valid": false
            }
        ]
    }
]